<html>
    <head>
        <title>
            <%= title %>
        </title>
        
        <link rel="stylesheet" href="//use.fontawesome.com/releases/v5.0.7/css/all.css">
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <h1 id="page-header"><i class="fas fa-address-book"></i> Contacts List</h1>
        <div class="card">
        <ul>
           <% for (let i of contact_list ){ %>
            <li class="listing">
                <p><%= i.name %> <span class="delete-button">
                    <a href="/delete-contact/?id=<%= i._id %>">
                        Delete
                    </a>
                </span><span class="phone"><%= i.phone %></span></p>
                
            </li>
           
            <% } %> 
            <hr>
        </ul>
   <div class="contact">
    <form action="/create-contact" method="POST">
        <label for="name" class="text">Name</label><br>
        <input type="text" name="name" placeholder="Enter Name" required><br>
        <label for="phone" class="text">Phone Number</label><br>
        <input type="number" name="phone" placeholder="Enter phone" required><br>
<button type="submit">Add Contact</button>
    </form>
</div>
</div>
    <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>